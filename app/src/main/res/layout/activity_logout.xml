<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.jxl.studybuddy.LogoutActivity">

    <ImageView
        android:alpha="0.5"
        android:id="@+id/image_logo_register"
        android:layout_width="264dp"
        android:layout_height="203dp"
        app:srcCompat="@drawable/sb_logo"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="40dp" />

    <TextView
        android:id="@+id/text_welcome_login"
        android:layout_width="242dp"
        android:layout_height="0dp"
        android:layout_marginTop="100dp"
        android:text="Are you sure you want to log out?"
        android:textAlignment="center"
        android:textSize="24sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/image_logo_register" />

    <Button
        style="@style/ButtonTheme"
        android:id="@+id/button_logout_logout"
        android:layout_width="344dp"
        android:layout_height="wrap_content"
        android:text="Log out"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp" />

</android.support.constraint.ConstraintLayout>
