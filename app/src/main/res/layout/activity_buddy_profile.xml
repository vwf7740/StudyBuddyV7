<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.jxl.studybuddy.BuddyProfileActivity">

    <ImageView
        android:id="@+id/imageView_displayPicture_buddyProfile"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="47dp"
        android:alpha="0.75"
        android:background="@android:color/transparent"
        android:scaleType="centerCrop"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/default_image" />

    <TextView
        android:id="@+id/textView_name_buddyProfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="BUDDY NAME"
        android:textAlignment="center"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView_displayPicture_buddyProfile" />

    <GridLayout
        android:id="@+id/grid_courseCodes_buddyProfile"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="70dp"
        android:layout_marginRight="70dp"
        android:layout_marginTop="20dp"
        android:columnCount="2"
        android:rowCount="2"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_name_buddyProfile"
        tools:layout_height="wrap_content">

        <Button
            android:id="@+id/button_courseCode1_buddyProfile"
            style="@style/ButtonTheme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginBottom="10dp"
            android:backgroundTint="@color/courseButtonColor"
            android:digits="abcdefghijklmnopqrstuvwxyz1234567890"
            android:text="+New"
            android:visibility="invisible" />

        <Button
            android:id="@+id/button_courseCode2_buddyProfile"
            style="@style/ButtonTheme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:backgroundTint="@color/courseButtonColor"
            android:digits="abcdefghijklmnopqrstuvwxyz1234567890"
            android:text="+New"
            android:visibility="invisible"
            tools:clickable="false" />

        <Button
            android:id="@+id/button_courseCode3_buddyProfile"
            style="@style/ButtonTheme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="2dp"
            android:backgroundTint="@color/courseButtonColor"
            android:digits="abcdefghijklmnopqrstuvwxyz1234567890"
            android:text="+New"
            android:visibility="invisible"
            tools:clickable="false" />

        <Button
            android:id="@+id/button_courseCode4_buddyProfile"
            style="@style/ButtonTheme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:backgroundTint="@color/courseButtonColor"
            android:digits="abcdefghijklmnopqrstuvwxyz1234567890"
            android:text="+New"
            android:visibility="invisible"
            tools:clickable="false" />
    </GridLayout>

    <Button
        android:id="@+id/button_addOrRemove_buddyProfile"
        style="@style/ButtonTheme"
        android:layout_width="344dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="Request buddy"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="81dp"
        android:layout_height="82dp"
        android:alpha="0.5"
        app:layout_constraintBottom_toTopOf="@+id/button_addOrRemove_buddyProfile"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/sb_logo" />

</android.support.constraint.ConstraintLayout>
