<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.jxl.studybuddy.LoginActivity"
    tools:layout_editor_absoluteY="0dp"
    tools:layout_editor_absoluteX="0dp">

    <EditText
        android:id="@+id/text_loginEmail"
        android:layout_width="344dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Email..."
        android:inputType="textEmailAddress"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/text_loginPassword" />

    <EditText
        android:id="@+id/text_loginPassword"
        android:layout_width="344dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Password..."
        android:inputType="textPassword"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toTopOf="@+id/button_login" />

    <Button
        style="@style/ButtonTheme"
        android:id="@+id/button_login"
        android:layout_width="344dp"
        android:layout_height="wrap_content"
        android:text="Log in"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/button_signUp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        style="@style/ButtonTheme"
        android:id="@+id/button_signUp"
        android:layout_width="344dp"
        android:layout_height="wrap_content"
        android:text="Sign Up"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/button_forgotPassword_login"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        style="@style/ButtonTheme"
        android:id="@+id/button_forgotPassword_login"
        android:layout_width="344dp"
        android:layout_height="wrap_content"
        android:text="Forgot password?"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp" />

    <ImageView
        android:alpha="0.5"
        android:id="@+id/image_logo_register"
        android:layout_width="264dp"
        android:layout_height="203dp"
        app:srcCompat="@drawable/sb_logo"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="40dp" />

    <TextView
        android:id="@+id/text_welcome_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Welcome to StudyBuddy"
        android:textColor="@color/colorPrimary"
        android:textSize="24sp"
        app:layout_constraintHorizontal_bias="0.505"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/image_logo_register" />

</android.support.constraint.ConstraintLayout>
